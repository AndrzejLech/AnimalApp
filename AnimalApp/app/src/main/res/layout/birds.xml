<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnStork"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/stork_s"
                android:text="Stork"
                android:textAlignment="textStart"
                android:textColor="#232323"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnAra"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ara_s"
                android:text="Ara"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/btnStork" />

            <Button
                android:id="@+id/btnSparrow"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/sparrow_s"
                android:text="Sparrow"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/btnAra" />

            <Button
                android:id="@+id/btnWoodpecker"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/woodpecker_s"
                android:text="Woodpecker"
                android:textAlignment="viewStart"
                android:textColor="#232323"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/btnSparrow" />

            <Button
                android:id="@+id/btnSwift"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/swift_s"
                android:text="Swift"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnWoodpecker" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>