<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#171717"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="48dp">

            <ScrollView
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnMammals"
                        android:layout_width="match_parent"
                        android:layout_height="140sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/mammals"
                        android:text="Mammals"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="16dp" />

                    <Button
                        android:id="@+id/btnBirds"
                        android:layout_width="match_parent"
                        android:layout_height="140sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/birds"
                        android:text="Birds"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        app:layout_constraintTop_toBottomOf="@+id/btnMammals" />

                    <Button
                        android:id="@+id/btnAmphibians"
                        android:layout_width="match_parent"
                        android:layout_height="140sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/amphibians"
                        android:text="Amphibians"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        app:layout_constraintTop_toBottomOf="@+id/btnBirds" />

                    <Button
                        android:id="@+id/btnReptiles"
                        android:layout_width="match_parent"
                        android:layout_height="140sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/reptiles"
                        android:text="Reptiles"
                        android:textAlignment="viewStart"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        app:layout_constraintTop_toBottomOf="@+id/btnAmphibians" />

                    <Button
                        android:id="@+id/btnFishes"
                        android:layout_width="match_parent"
                        android:layout_height="140sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/fishes"
                        android:text="Fishes"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnReptiles" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>