<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnCatfish"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/catfish_s"
                android:text="Catfish"
                android:textAlignment="textStart"
                android:textColor="#232323"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnAmphirion"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/amfiprion_s"
                android:text="Amphiprion"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/btnCatfish"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/btnLionfish"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/lionfish_s"
                android:text="Lionfish"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/btnAmphirion" />

            <Button
                android:id="@+id/btnTrout"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/trout_s"
                android:text="Trout"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/btnLionfish" />

            <Button
                android:id="@+id/btnFightingFish"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/fighting_fish_s"
                android:text="Fighting fish"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/btnTrout"
                tools:layout_editor_absoluteX="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>